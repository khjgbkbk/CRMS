<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <TableLayout android:id="@+id/tableLayout1" android:layout_alignParentLeft="true" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="false">
            <TextView android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceLarge" android:text="Query" android:textSize="30dip" android:layout_width="fill_parent" android:layout_height="fill_parent"></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView2" android:layout_height="wrap_content" android:text="Equipment ID:" android:layout_weight="1"></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <EditText android:layout_width="wrap_content" android:layout_height="60dip" android:layout_weight="20" android:id="@+id/queEqid"></EditText>
            <Button android:text="QR" android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="60dip" android:layout_weight="1"></Button>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="Enter" android:textSize="30dip" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dip" android:layout_weight="20" android:onClick="queryEnter"></Button>
            <Button android:id="@+id/button3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="30dip" android:layout_marginTop="20dip" android:text="Back" android:layout_weight="1" android:onClick="queryBack"></Button>

        </TableRow>
    </TableLayout>
    
</RelativeLayout>
